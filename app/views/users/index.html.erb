<div class="container">
   <div class="row">
      <div class="col-md-3">
         <%= render 'layouts/user',user: @user %>
         <%= render 'layouts/book',book: @book %>
       </div>
  <div class="col-md-8 offset-md-1">
    <h2>Users</h2>

    <table class="table table-hover table-inverse">
     <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th><%= attachment_image_tag(user,:profile_image, 20, 20, fallback:"no_image.jpg" ) %></th>
          <th><%= user.name %></th>
          <td><%= link_to "Show", user_path(user) %>
       </tr>
      <% end %>
    </tbody>
    </thead>
    </table>
  </div>
    </div>
      </div>
        </div>
          </div>









 