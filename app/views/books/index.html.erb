<div class="container">
  <div class="row">
    <div class="col-md-4">
     <%= render 'books/aaa',user: current_user, book: @book %>
   </div>
   <div class="col-md-8">
    <h2>Books</h2>

    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
       <% @books.each do |book| %>
         <tr>
           <th><%= link_to book.title, book_path(current_user) %></th>
           <th><%= book.body %></th>
         </tr>
       <% end %>
      </tbody>
    </table>
    </div>

  </div>
</div>

