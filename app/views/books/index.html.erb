<div class="container">
   <div class="row">
       <div class="col-md-3">
         <%= render 'layouts/user',user: @user %>
         <%= render 'layouts/book',book: @book %>
       </div>
       <div class="col-md-8 offset-md-1"> 

     
      <% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
  <% end %>
<% end %>





    <h2>Books</h2>

    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th colspan="1"></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        
        
      <tbody>
       <% @books.each do |book| %>
         <tr>
           <th>
               <%= link_to user_path(book.user.id) do %>
               <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg", size: "60x60" %>
              <% end %> 
           </th>
           <th><%= link_to book.title, book_path(book) %></th>
           <th><%= book.body %>
         </tr>
       <% end %>
      </tbody>
      </thead>
    </table>
    </div>
  </div>
</div>
</div>

